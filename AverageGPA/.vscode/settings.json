// 将设置放入此文件中以覆盖默认值和用户设置。
{
    "files.defaultLanguage": "c", // ctrl+N新建文件后默认的语言

    "code-runner.runInTerminal": true, // 设置成false会在“输出”中输出，无法交互 
    "code-runner.executorMap": {
        "c": "cd $dir && clang $fileName -o $fileNameWithoutExt.exe -Wall -g -Og -static-libgcc -fcolor-diagnostics --target=x86_64-w64-mingw -std=c11 && $dir$fileNameWithoutExt",
        "cpp": "cd $dir && clang++ $fileName -o $fileNameWithoutExt.exe -Wall -g -Og -static-libgcc -fcolor-diagnostics --target=x86_64-w64-mingw -std=c++1z && $dir$fileNameWithoutExt"
    },
    "code-runner.saveFileBeforeRun": true,
    "C_Cpp.clang_format_sortIncludes": true,
    "C_Cpp.errorSquiggles": "Disabled",
    
    "clang.executable": "clang",
    "clang.completion.enable": true,
    "clang.cxxflags": [
        "-std=c++17",
        "-IC:/Program Files/mingw64/lib/gcc/x86_64-w64-mingw32/8.1.0/include/c++",
        "-IC:/Program Files/mingw64/lib/gcc/x86_64-w64-mingw32/8.1.0/include/c++/x86_64-w64-mingw32",
        "-IC:/Program Files/mingw64/lib/gcc/x86_64-w64-mingw32/8.1.0/include/c++/backward",
        "-IC:/Program Files/mingw64/lib/gcc/x86_64-w64-mingw32/8.1.0/include",
        "-IC:/Program Files/LLVM/include",
        "-IC:/Program Files/mingw64/x86_64-w64-mingw32/include",
        "-IC:/Program Files/mingw64/lib/gcc/x86_64-w64-mingw32/8.1.0/include-fixed"
    ],
    "clang.cflags": [
        "-std=c11",
        "-IC:/Program Files/mingw64/lib/gcc/x86_64-w64-mingw32/8.1.0/include/c++",
        "-IC:/Program Files/mingw64/lib/gcc/x86_64-w64-mingw32/8.1.0/include/c++/x86_64-w64-mingw32",
        "-IC:/Program Files/mingw64/lib/gcc/x86_64-w64-mingw32/8.1.0/include/c++/backward",
        "-IC:/Program Files/mingw64/lib/gcc/x86_64-w64-mingw32/8.1.0/include",
        "-IC:/Program Files/LLVM/include",
        "-IC:/Program Files/mingw64/x86_64-w64-mingw32/include",
        "-IC:/Program Files/mingw64/lib/gcc/x86_64-w64-mingw32/8.1.0/include-fixed"
    ],

}